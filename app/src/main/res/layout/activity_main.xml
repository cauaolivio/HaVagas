<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro HaVagas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Completo"/>
        <EditText
            android:id="@+id/edit_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
        <CheckBox
            android:id="@+id/switch_email_atualizacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desejo receber e-mails de atualizações"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/edit_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />
        <RadioGroup
            android:id="@+id/radio_group_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_telefone_comercial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comercial"
                android:layout_marginEnd="16dp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/radio_telefone_residencial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residencial"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/switch_adicionar_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Telefone Celular"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/edit_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Telefone Celular"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo"
            android:layout_marginTop="16dp"/>
        <RadioGroup
            android:id="@+id/radio_group_sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_sexo_masculino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino"
                android:layout_marginEnd="16dp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/radio_sexo_feminino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feminino"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Nascimento"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/edit_data_nascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="dd/mm/aaaa"
            android:focusable="false"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formação"
            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinner_formacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_ano_formatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano de Formatura"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/edit_ano_formatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Ano de Formatura"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_ano_conclusao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano de Conclusão"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/edit_ano_conclusao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Ano de Conclusão"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_instituicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instituição"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/edit_instituicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Instituição"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_titulo_monografia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título da Monografia"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/edit_titulo_monografia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Título da Monografia"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text_orientador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orientador"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/edit_orientador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Orientador"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vagas de Interesse"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/edit_vagas_interesse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_salvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:layout_marginEnd="16dp"/>

            <Button
                android:id="@+id/btn_limpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpar"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>